            namely = img_pre.neme
            img = await img_pre.pic;
            nmo = img_pre.nmo

          
        } else {
          
          
            img = await gear.getCanvas(paths.BUILD + "LOOT/" + BOX.emblem + ".png")
        };

        let qtd;
